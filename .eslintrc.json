// RegExp to format all numbers like "0." to "0.0"
// 	Find: [0-9]+\.(?![0-9])
// 	Replace: $00

{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["google"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"require-jsdoc": "off",
		"no-undef": "error",
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"no-tabs": "off",
		"linebreak-style": "off",
		"quotes": ["error", "double"],
		"object-curly-spacing": "off",
		"padded-blocks": "off",
		"max-len": "off",
		"comma-dangle": "off",
		"eol-last": "off",
		"semi": "off",
		"arrow-parens": "off",
		"curly": "off",
		"operator-linebreak": "off"
	}
}
